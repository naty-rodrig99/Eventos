@model IEnumerable<Eventos.Models.Recurso>

@{
    ViewBag.Title = "Index";
}

    <h2 style="color:Tomato;">Recursos</h2>

<p>
    @Html.ActionLink("Crear Recurso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.provincia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoRecurso)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.provincia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoRecurso)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.idRecurso }) |
            @Html.ActionLink("Details", "Details", new { id = item.idRecurso }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idRecurso }) |
            @Html.ActionLink("Paquetes", "VerPaquetes", new { id = item.idRecurso }) |
        </td>
    </tr>
}

</table>
