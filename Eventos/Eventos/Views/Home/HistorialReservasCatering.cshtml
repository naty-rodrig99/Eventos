@using System.Data;

@{
    ViewBag.Title = "HistorialReservasCatering";
}

<h2 style="text-align:center;">Historial de Reservaciones</h2>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Catering</title>
</head>
<body>
    <h3>Catering</h3>
    <table class="table">
        <tr bgcolor="lightGray">
            <th>NumReservacion</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Descripcion</th>
            <th>Tipo Recurso</th>
            <th>Cliente</th>
        </tr>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["numReservacion"]</td>
                <td>@row["fecha"]</td>
                <td>@row["hora"]</td>
                <td>@row["descripcion"]</td>
                <td>@row["tipoRecurso"]</td>
                <td>@row["usuario"]</td>
            </tr>
        }
    </table>
</body>
</html>