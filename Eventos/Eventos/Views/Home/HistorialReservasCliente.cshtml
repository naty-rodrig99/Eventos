@using System.Data;

@{
    ViewBag.Title = "HistorialReservasCliente";
}

<h2 style="text-align:center;">Historial de Reservaciones</h2>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cliente</title>
</head>
<body>
    <table class="table">
        <tr bgcolor="lightGray">
            <th>numReservacion</th>
            <th>fecha</th>
            <th>hora</th>
            <th>descripcion</th>
            <th>tipoRecurso</th>
            <th>usuario</th>
        </tr>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["numReservacion"]</td>
                <td>@row["fecha"]</td>
                <td>@row["hora"]</td>
                <td>@row["descripcion"]</td>
                <td>@row["tipoRecurso"]</td>
                <td>@row["usuario"]</td>
            </tr>
        }
    </table>


</body>
</html>